{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.summit-os.local/detections.smoke.schema.json",
  "title": "SmokeDetection",
  "type": "object",
  "properties": {
    "asset_id": { "type": "string" },
    "ts_iso": { "type": "string", "format": "date-time" },
    "bbox_xywh": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 4,
      "maxItems": 4
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "lat": { "type": "number" },
    "lon": { "type": "number" },
    "alt": { "type": "number" },
    "yaw": { "type": "number" },
    "image_id": { "type": "string" }
  },
  "required": ["asset_id", "ts_iso", "bbox_xywh", "confidence"],
  "additionalProperties": false
}
