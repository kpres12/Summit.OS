# External provider configuration for Summit.OS

# OIDC (Auth)
NEXT_PUBLIC_OIDC_ISSUER=https://your-issuer.example.com/realms/yourrealm
NEXT_PUBLIC_OIDC_CLIENT_ID=summit-console
NEXT_PUBLIC_OIDC_REDIRECT_URI=http://localhost:3000/auth/callback
OIDC_CLIENT_SECRET=

# API Gateway OIDC enforcement (optional)
OIDC_ENFORCE=false
OIDC_ISSUER=https://your-issuer.example.com/realms/yourrealm
OIDC_AUDIENCE=summit-api
OIDC_JWKS_URL=https://your-issuer.example.com/realms/yourrealm/protocol/openid-connect/certs

# Policy (OPA)
OPA_URL=http://opa.yourdomain.com:8181

# Messaging (MQTT)
MQTT_BROKER=mqtt.yourdomain.com
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Caches/Streams
REDIS_URL=redis://redis.yourdomain.com:6379

# Databases
POSTGRES_URL=postgresql://user:password@db.yourdomain.com:5432/summit_os

# API wiring for API Gateway (use external services if provided)
FABRIC_URL=http://fabric.yourdomain.com:8001
FUSION_URL=http://fusion.yourdomain.com:8002
INTELLIGENCE_URL=http://intelligence.yourdomain.com:8003
TASKING_URL=http://tasking.yourdomain.com:8004

# Console
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8001
